{
    "powershell.scriptAnalysis.enable": true,
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.debugging.createTemporaryIntegratedConsole": true,
    "files.trimTrailingWhitespace": true,
    "files.encoding": "utf8",
    "files.autoSave": "onFocusChange",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "powershell.pester.codeLens": false,
    // GitHub Copilot configuration
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "powershell": true
    },
    "github.copilot.advanced": {
        "indentationMode": {
            "powershell": "tabSize=4,useTabs=false"
        }
    }, // Local instructions for GitHub Copilot
    "github.copilot.editor.enableCodeActions": true,
    // Point to the Copilot instructions files
    "github.copilot.editor.defaultTextCompleterProfiles": [
        {
            "name": "SPALM PowerShell Module",
            "prompt": "docs/CopilotPrompt.md"
        }
    ]
}